<h4 id="title-msg"class="animated fadeInDown">WDI Conf - Save the Date</h4>

<a href="#" data-activates="book" class="button-collapse waves-effect waves-light btn"><i class="material-icons">Buy Tickets</i></a>

<div id="book" class="side-nav">
 <a id="book-btn" href="#" data-activates="payment" class="button-collapse waves-effect waves-light btn"><i class="material-icons">Book</i></a>
</div>

<div id="payment" class="side-nav">
  <div>
    <form action="/charges" method="POST" id="payment-form">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <span class="payment-errors"></span>

      <div class="form-row">
        <label>
          <span>Card Number</span>
          <input type="text" size="16" data-stripe="number">
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Expiration (MM/YY)</span>
          <input type="text" size="2" data-stripe="exp_month">
        </label>
        <span> / </span>
        <input type="text" size="2" data-stripe="exp_year">
      </div>

      <div class="form-row">
        <label>
          <span>CVC</span>
          <input type="text" size="4" data-stripe="cvc">
        </label>
      </div>
      <input class="total-price" type="hidden" value="">
      <a id="pay-btn" href="#" data-activates="confirmation" class="button-collapse waves-effect waves-light btn"><i class="material-icons">Pay</i></a>
      <input type="submit" class="submit">
    </form>
  </div>

 </div>

<div id="confirmation" class="side-nav">
  <a id="home-btn" href="#" class="waves-effect waves-light btn"><i class="material-icons">Home</i></a>
</div>

